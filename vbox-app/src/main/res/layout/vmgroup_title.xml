<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:padding="4dp">
    
	<ImageView android:id="@+id/group_collapse" 
		android:layout_marginRight="8dp"  
		android:src="@drawable/ic_menu_collapse"  
		android:clickable="true"
		android:layout_gravity="center"
		android:layout_width="32dip" 
		android:layout_height="32dip" />
	
	<androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
        android:id="@+id/group_title"
		style="?attr/textAppearanceBody1"
		android:layout_gravity="left"	 
		android:layout_weight="1"
		android:text="Group Name" />
	
	<androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/group_num_groups"
	    	android:drawableLeft="@drawable/ic_context_network"
	    	android:drawablePadding="4dp"
		style="?attr/textAppearanceBody2"
		android:layout_gravity="center" />
	
	<androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/group_num_machine"
	    	android:drawableLeft="@drawable/ic_context_machine"  
	    	android:drawablePadding="4dp"
		style="?attr/textAppearanceBody2"
		android:layout_gravity="center" />
	
	<ImageView android:id="@+id/group_enter" 
	    	android:clickable="true"
		android:src="@drawable/ic_navigation_forward"  
		android:layout_marginLeft="8dp"
		android:layout_gravity="center"
		android:layout_width="32dip" 
		android:layout_height="32dip" />
</LinearLayout>
